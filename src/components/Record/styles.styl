$green = #44bd32;
$trackedGreen = #A9FF6A
$borderWidth = 1px

.root
  padding-top: 15px
  position: relative
  display: flex

  &:before
  &:after
    content: ""
    position: absolute
    top: $borderWidth * -1
    right: $borderWidth * -1
    opacity: 0
    pointer-events: none
    transition: 250ms ease-in-out

  &:before
    bottom: $borderWidth * -1
    width: $borderWidth
    background-image: linear-gradient($trackedGreen, transparent)

  &:after
    left: $borderWidth * -1
    height: $borderWidth
    background-image: linear-gradient(to right, transparent, $trackedGreen)

  &.tracked
    &:before
    &:after
      opacity: 1


