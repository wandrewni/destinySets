$padding = 10px;

.inner
  background: #15191E
  height: 100%
  padding-bottom: 5px // TODO: set this in a better way? On .section?

  .noUi &
    background: none

.header
  position: relative
  background: #283039
  padding: $padding

  .noUi &
    background: none

.hidden
  opacity: .5

.headerImage
  width: "calc(100% + (%s * 2))" % $padding
  display: block
  margin: $padding * -1

.headerImage + .headerText
  position: absolute
  bottom: 0
  left: 0
  right: 0
  background: linear-gradient(to top, rgba(black, 1), rgba(black, 0))
  padding: $padding
  font-size: 18px

.split
  display: flex

.splitMain
  flex: 1


.hiddenToggleText
  font-size: 14px

.hiddenToggle
  background: none
  padding: 5px
  margin: -5px
  border: none
  outline: none !important
  color: inherit
  font-size: 15px
  opacity: .25
  transition: opacity 150ms ease-in-out
  cursor: pointer

  &:active
    opacity: .3 !important

@media (hover: hover)
  .hiddenToggle
    opacity: 0

  .inner:hover .hiddenToggle
    opacity: .5

    &:hover
      opacity: .75

.seasonLabel
  font-size: .75em
  background: #2B3037
  border-radius: 2px
  padding: 0px 6px
  font-weight: 400
  margin-left: .5em

.itemListWrapper
  margin: 0 -5px -10px -10px

  .noUi &
    margin-left: 0
    margin-right: 0

.itemList
  display: inline-flex
  flex-wrap: wrap
  margin: 0 5px 5px 5px

  .noUi &
    margin: 0 -7px

.item
  margin-bottom: 10px !important
  margin-top: 0 !important

.title
.desc
  margin: 0

.title
  margin-bottom: .25em
  color: #f7f8f8
  font-weight: 500

  &:only-child
    margin-bottom: 0

.desc
  color: #b7bcbe

.section
  padding: 0 $padding

  .noUi &
    padding: 0

.sectionName
  margin-top: 10px
  margin-bottom: 2px
  font-weight: 400
