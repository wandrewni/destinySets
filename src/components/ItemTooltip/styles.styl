$padding = 10px

.tooltip
  width: 320px
  font-size: 15px
  background: #20262d
  position: relative
  color: white
  box-shadow: 0 3px 6px rgba(black, 0.16), 0 3px 6px rgba(black, 0.23);

  &.small
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.5)

.body
  overflow: auto
  padding: $padding
  padding-bottom: 0

  .small &
    font-size: 14px

  p
    margin: 0 0 $padding 0

.header
  font-size: 15px

  .small &
    content: 'small'

.description
  line-height: 1.3
  white-space: pre-line

  .small &
    display: none

  .body:hover &
    display: block

.itemAttributes
  margin: 0 0 $padding 0

.perks
  margin: 0 0 $padding 0

.stats
  margin: 0 0 $padding 0

.extraInfo
  opacity: .8
  font-size: .9em
  font-style: italic
  margin: 0 0 $padding 0

.objectives
  font-size: 14px
  margin: 0 0 $padding 0

  .small &
    font-size: 13px

.section
  & + &
    padding-top: $padding
    border-top: 1px solid rgba(white, .2)

  &:empty
    display: none

  &:empty + &
    border-top: none
