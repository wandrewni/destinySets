.root
  display: table

.item
  margin-bottom: 10px
  position: relative
  display: table-row

.name
  text-align: right
  white-space: nowrap

.name
.valueCell
  font-size: .9em
  vertical-align: middle
  display: table-cell

.valueCell
  width: 100%
  padding-left: 15px

.bar
  position: relative
  height: 1.2em
  overflow: hidden
  background: #13161B
  border-radius: 2px
  overflow: hidden

  .numerical &
    background: none

.barFill
  height: 100%
  background: rgb(80, 82, 93)
  border-radius: 0 2px 2px 0

  .numerical &
    display: none

.value
  position: absolute
  top: 0
  bottom: 0
  left: 4px
  display: flex
  align-items: center
  line-height: 0
  font-size: .9em

